generator client {
  provider = "prisma-client-js"
}

generator joi {
  provider = "prisma-joi-generator"
}
datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

enum Difficulty {
    EASY
    MEDIUM
    HARD
}

model Wizard {  
    id String   @id @default(auto ()) @map("_id") @db.ObjectId
    firstname  String   
    lastname  String 
    description  String  
    spells Spell[]
    @@index([firstname,lastname])

}

model Spell {
  id    String @id @default(auto()) @map("_id") @db.ObjectId
  name  String
  Wizard   Wizard   @relation(fields: [wizardId], references: [id])
  wizardId String @db.ObjectId 

  @@index([name])
}

model Elixer {
  id       String @id @default(auto()) @map("_id") @db.ObjectId
  name  String
  difficulty  Difficulty   @default(EASY)


  @@index([name,difficulty])
}