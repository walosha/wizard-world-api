generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}


model Wizard {  
    id     String   @id @default(auto ()) @map("_id") @db.ObjectId
    firstname  String   
    lastname  String   
    description  String  
    spells Spell[]

}

model Spell {
  id       String @id @default(auto()) @map("_id") @db.ObjectId
  name  String
  difficulty  String
  Wizard   Wizard   @relation(fields: [wizardId], references: [id])
  wizardId String @db.ObjectId 
}

model Elixer {
  id       String @id @default(auto()) @map("_id") @db.ObjectId
  name  String
}